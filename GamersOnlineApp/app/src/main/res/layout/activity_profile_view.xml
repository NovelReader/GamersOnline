<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainLayout"
        android:orientation="horizontal"
        android:alpha=".6">
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:rowCount="3">


        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:layout_column="0"
            cardview:cardCornerRadius="4dp"

            android:id="@+id/card">


            <LinearLayout
                android:id="@+id/backgnd"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <TextView
                    android:background="#ffffff"
                    android:id="@+id/userName"
                    android:textColor="#2d2d2d"
                    android:layout_gravity="center"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_width="96dp"
                    android:layout_height="26dp"
                    android:text="Name"/>

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_gravity="center"
                    android:layout_width="96dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:background="#2d2d2d"/>
                <TextView
                    android:background="#ffffff"
                    android:id="@+id/currencyTextView"
                    android:textColor="#2d2d2d"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currency: 1 Billion Shekels"/>
                <TextView
                    android:background="#ffffff"
                    android:id="@+id/personalWealth"
                    android:textColor="#2d2d2d"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Wealth: "/>
                <TextView
                    android:background="#ffffff"
                    android:id="@+id/serverWealth"
                    android:textColor="#2d2d2d"
                    android:layout_gravity="center"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Server Net Worth: "/>


                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="showStats"
            android:text="View stats"
            android:layout_gravity="center"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:layout_row="2"
            android:layout_column="0"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/currentHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Health: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxHealth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Health: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/currentMp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Mp: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxMp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Mp: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/currentStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Strength: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxStrength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Strength: "
                android:textSize="10sp" />
            <TextView
                android:id="@+id/currentSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Speed: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Speed: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/currentIntelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Intelligence: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxIntelligence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Intelligence: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/currentWisdom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Current Wisdom: "
                android:textSize="10sp" />

            <TextView
                android:id="@+id/maxWisdom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Max Wisdom: "
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_row="0"
            android:layout_column="1"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>



    </GridLayout>



</android.support.constraint.ConstraintLayout>